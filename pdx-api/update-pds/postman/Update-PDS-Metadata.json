{
  "info": {
    "name": "Update a record in the PDS", 
    "_postman_id": "abcd1234-abcd-1234-abcd-123456abcdef",
    "description": "Updates a field in the ds_personal_details dataset.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get an OAuth2 Access Token",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = JSON.parse(responseBody);",
              "pm.collectionVariables.set(\"oauth_access_token\", jsonData.access_token);",
              "console.log(jsonData);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "auth": {
          "type": "basic",
          "basic": [
            {
              "key": "username",
              "value": "{{oauth_client_id}}",
              "type": "string"
            },
            {
              "key": "password",
              "value": "{{oauth_client_secret}}",
              "type": "string"
            }
          ]
        },
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            {
              "key": "grant_type",
              "value": "client_credentials"
            },
            {
              "key": "scope",
              "value": "mydex:pdx"
            }
          ]
        },
        "url": {
          "raw": "https://sbx-op.mydexid.org/oauth2/token",
          "protocol": "https",
          "host": [
            "sbx-op",
            "mydexid",
            "org"
          ],
          "path": [
            "oauth2",
            "token"
          ]
        }
      }
    },
    {
      "name": "Update field in ds_personal_details dataset",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = JSON.parse(responseBody);",
              "console.log(\"The response is \" + jsonData);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{oauth_access_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            {
              "key": "field_personal_marital_status",
              "value": "Divorced",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "https://sbx-api.mydex.org/api/pds/pds/{{MEMBER_UID}}.json?key={{MEMBER_KEY}}&con_id={{CONNECTION_ID}}&source_type=connection&dataset=ds_personal_details&instance=0&id=1",
          "protocol": "https",
          "host": [
            "sbx-api",
            "mydex",
            "org"
          ],
          "path": [
            "api",
            "pds",
            "pds",
            "{{MEMBER_UID}}.json"
          ],
          "query": [
            {
              "key": "key",
              "value": "{{MEMBER_KEY}}"
            },
            {
              "key": "con_id",
              "value": "{{CONNECTION_ID}}"
            },
            {
              "key": "source_type",
              "value": "connection"
            },
            {
              "key": "dataset",
              "value": "ds_personal_details"
            },
            {
              "key": "instance",
              "value": "0"
            },
            {
              "key": "id",
              "value": "1"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "oauth_client_id",
      "value": "abcd1234-abcd-1234-abcd-123456abcdef"
    },
    {
      "key": "oauth_client_secret",
      "value": "CHANGEME"
    },
    {
      "key": "MEMBER_KEY",
      "value": "ABCDEFGHIJKLMNOP123456789"
    },
    {
      "key": "MEMBER_UID",
      "value": "1234"
    },
    {
      "key": "CONNECTION_ID",
      "value": "1234-45678"
    },
    {
      "key": "oauth_access_token",
      "value": ""
    }
  ]
}
